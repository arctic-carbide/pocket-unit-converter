<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <EditText
            android:id="@+id/fahrenheitInputField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/zerodec"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fahrenheitSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/fahrenheit"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/fahrenheitInputField"
            app:layout_constraintBottom_toBottomOf="@id/fahrenheitInputField"
            app:layout_constraintLeft_toRightOf="@id/fahrenheitInputField"

            />

        <TextView
            android:id="@+id/celsiusValueText"
            android:hint="0.00"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toLeftOf="@id/celsiusSymbol"
            app:layout_constraintBottom_toBottomOf="@id/celsiusSymbol"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/celsiusSymbol"
            android:text="@string/celsius"
            android:textSize="24sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="@id/fahrenheitSymbol"
            app:layout_constraintTop_toBottomOf="@id/fahrenheitInputField"

            />

        <Button
            android:id="@+id/temperatureConvertButton"
            android:text="@string/convert"
            android:onClick="onClickConvert"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginBottom="50dp"
            />



</android.support.constraint.ConstraintLayout>